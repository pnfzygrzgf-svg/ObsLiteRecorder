<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Upload ins Portal -->
    <TextView
        android:id="@+id/tvUploadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/data_title_upload"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- OBS-Lite URL -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/data_label_portal_url"
        android:textColor="@color/text_primary" />

    <EditText
        android:id="@+id/etObsUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/data_hint_portal_url"
        android:inputType="textUri" />

    <!-- API-Key -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/data_label_api_key"
        android:textColor="@color/text_primary" />

    <EditText
        android:id="@+id/etApiKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/data_hint_api_key"
        android:inputType="textPassword" />

    <!-- Dateiauswahl: Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/data_label_bin_select"
        android:textColor="@color/text_primary" />

    <Spinner
        android:id="@+id/spFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Upload-Button (Comic) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpload"
        style="@style/Widget.App.ComicButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/data_button_upload"
        app:icon="@drawable/ic_upload"
        app:iconPadding="6dp"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white" />

    <!-- Statusanzeige -->
    <TextView
        android:id="@+id/tvUploadStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/data_status_no_upload_yet"
        android:textColor="@color/text_secondary" />

    <!-- Trenner -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:background="@color/border_soft" />

    <!-- BIN-Check -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_section_bin_check_title"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDebugBin"
        style="@style/Widget.App.ComicButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/data_button_bin_check"
        app:icon="@drawable/ic_bin_debug"
        app:iconPadding="6dp"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white" />

    <TextView
        android:id="@+id/tvBinStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="@color/text_secondary"
        android:textSize="13sp" />

    <!-- NEU: Fortschrittsbalken für BIN-Prüfung -->
    <ProgressBar
        android:id="@+id/progressBin"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:max="100"
        android:progress="0"
        android:visibility="gone" />

    <!-- Trenner -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:background="@color/border_soft" />

    <!-- Aufgezeichnete Fahrten -->
    <TextView
        android:id="@+id/tvFilesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/data_section_files_title"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteAll"
        style="@style/Widget.App.ComicButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_button_delete_all"
        app:icon="@drawable/ic_delete_all"
        app:iconPadding="6dp"
        app:iconGravity="textStart"
        app:iconTint="@android:color/white" />

    <!-- Die ListView bekommt jetzt den restlichen Platz über layout_weight -->
    <ListView
        android:id="@+id/listFiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:divider="@color/border_soft"
        android:dividerHeight="1dp" />

</LinearLayout>

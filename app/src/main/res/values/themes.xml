<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Basis-App-Theme: Material Design 3 -->
    <style name="Base.Theme.ObsLiteRecorder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Du kannst später noch eigene Farben setzen, aber wir lassen erstmal die Material-Defaults -->
        <!-- Status-/Navigationsleiste optional leicht anpassen -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <!-- Normales App-Theme (nach dem Splashscreen) -->
    <style name="Theme.ObsLiteRecorder" parent="Base.Theme.ObsLiteRecorder" />

    <!-- Launcher-/Splash-Theme -->
    <style name="Theme.ObsLiteRecorder.Launcher" parent="Base.Theme.ObsLiteRecorder">
        <!-- Hintergrund für ältere Android-Versionen -->
        <item name="android:windowBackground">@drawable/splash_screen</item>

        <!-- Jetpack SplashScreen (Android 12+ & core-splashscreen) -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/obs_splash_logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/splash_background</item>

        <!-- Nach dem Splashscreen -->
        <item name="postSplashScreenTheme">@style/Theme.ObsLiteRecorder</item>
    </style>

</resources>

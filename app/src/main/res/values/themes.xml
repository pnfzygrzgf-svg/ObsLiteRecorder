<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Basis-App-Theme: sehr clean, alles weiß -->
    <style name="Base.Theme.ObsLiteRecorder" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Fenster-Hintergrund -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Material-Oberflächen ebenfalls weiß -->
        <item name="colorSurface">@color/white</item>

        <!-- Textfarben -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Globale Schriftart -->
        <item name="android:fontFamily">@font/open_sans_condensed</item>
        <item name="fontFamily">@font/open_sans_condensed</item>

        <!-- Statusleiste: weiß + dunkle Icons -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigationsleiste: weiß + dunkle Icons -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Normales App-Theme (nach dem Splashscreen) -->
    <style name="Theme.ObsLiteRecorder" parent="Base.Theme.ObsLiteRecorder" />

    <!-- Launcher-/Splash-Theme -->
    <style name="Theme.ObsLiteRecorder.Launcher" parent="Base.Theme.ObsLiteRecorder">
        <!-- Hintergrund für ältere Android-Versionen -->
        <item name="android:windowBackground">@drawable/splash_screen</item>

        <!-- Jetpack SplashScreen (Android 12+ & core-splashscreen) -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/obs_splash_logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/splash_background</item>

        <!-- Helle Navigationsleiste auch während des Splashscreens -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Nach dem Splashscreen -->
        <item name="postSplashScreenTheme">@style/Theme.ObsLiteRecorder</item>
    </style>

</resources>


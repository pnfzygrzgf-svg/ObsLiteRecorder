<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- GPS / Netzwerk für OSM -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Foreground-Service für dauerhafte Aufzeichnung im Hintergrund -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Ab Android 14+: zusätzliches Permission für foregroundServiceType="location" -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- USB-Host, weil du als Host ein externes USB-Gerät (OBS Lite) ansteckst -->
    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />
    <!--
        Wenn du möchtest, dass die App auch auf Geräten ohne USB-Port im Play Store erscheint,
        setze android:required="false". Dann musst du aber selbst abfangen,
        dass kein USB verfügbar ist.
    -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ObsLiteRecorder"
        tools:targetApi="31">

        <!-- Haupt-Activity (Launcher) mit Splash-Theme -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ObsLiteRecorder.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Über diese App – nutzt das App-Theme -->
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_app_title"
            android:exported="false" />

        <!-- Seite für Upload + Fahrten + BIN-Check -->
        <activity
            android:name=".DataActivity"
            android:label="Aufgezeichnete Fahrten"
            android:exported="false" />

        <!-- Foreground-Service, der USB + GPS komplett übernimmt -->
        <service
            android:name=".obslite.ObsLiteService"
            android:exported="false"
            android:foregroundServiceType="location|dataSync" />

    </application>

</manifest>
